{
    "variables":{},
    "provisioners": [
      {
        "type": "ansible",
        "playbook_file": "./provision.yml"
      }
    ],  
    "builders": [
      {
        "type": "amazon-ebs",
        "region": "us-west-2", 
        "instance_type": "m5.xlarge",
        "ssh_username": "ubuntu",
        "ssh_interface": "private_ip",
        "ssh_bastion_host": "entrypoint.build-ops.out.accuenplatform.com",
        "ssh_bastion_username": "ubuntu",
        "ssh_bastion_private_key_file": "~/.annalect/ssh/entrypoint",
        "ami_name": "annalect_ubuntu_bionic 18.04 {{timestamp}}",
        "associate_public_ip_address": "false",
        "vpc_filter": {
          "filters": {
            "tag:Name": "accuen-build-ops-vpc",
            "isDefault": "false"
          }
        },
        "subnet_filter": {
          "filters": {
            "tag:Name": "accuen-build-ops-vpc-private-us-west-2b"
          }
        },
        "source_ami_filter": {
            "filters": {
              "virtualization-type": "hvm",
              "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
              "root-device-type": "ebs"
            },
            "owners": ["099720109477"],
            "most_recent": true
        },
        "security_group_filter": {
          "filters": {
            "tag:Name": "annalect_buildenv_build_ops"
          }
        },
        "launch_block_device_mappings": [
          {
            "device_name": "/dev/sda1",
            "volume_size": 500,
            "volume_type": "gp2",
            "delete_on_termination": true
          }
        ],
        "tags": {
          "OS": "Ubuntu",
          "Base_AMI_Name": "{{ .SourceAMIName }}",
          "Extra": "{{ .SourceAMITags.TagName }}",
          "Runs": "ubuntu, bionic, 18.04"
        }
      }
    ]
}