{
    "variables":{
      "clone_db_password": "{{env `PGPASSWORD`}}"
    },
    "provisioners": [
      {
        "type": "shell",
        "script": "pgdump.sh",
        "environment_vars": [
          "PGHOST=djangoclone.build-ops.in.accuenplatform.com",
          "PGUSER=django",
          "PGPASSWORD={{user `clone_db_password`}}",
          "CLONE_DB=django"
        ]
      }
    ],  
    "builders": [
      {
        "type": "amazon-ebs",
        "region": "us-west-2", 
        "instance_type": "m5.xlarge",
        "ssh_username": "ubuntu",
        "ssh_interface": "private_ip",
        "ssh_bastion_host": "entrypoint.build-ops.out.accuenplatform.com",
        "ssh_bastion_username": "ubuntu",
        "ssh_bastion_private_key_file": "~/.annalect/ssh/packer_smp",
        "ami_name": "annalect_smp_dump {{timestamp}}",
        "associate_public_ip_address": "false",
        "vpc_filter": {
          "filters": {
            "tag:Name": "accuen-build-ops-vpc",
            "isDefault": "false"
          }
        },
        "subnet_filter": {
          "filters": {
            "tag:Name": "accuen-build-ops-vpc-private-us-west-2b"
          }
        },
        "source_ami_filter": {
            "filters": {
              "virtualization-type": "hvm",
              "name": "annalect_docker*",
              "root-device-type": "ebs"
            },
            "owners": ["348194362585"],
            "most_recent": true
        },
        "security_group_filter": {
          "filters": {
            "tag:Name": "annalect-buildenv-build-ops"
          }
        },
        "launch_block_device_mappings": [
          {
            "device_name": "/dev/sda1",
            "volume_size": 1000,
            "volume_type": "gp2",
            "delete_on_termination": true
          }
        ],
        "tags": {
          "OS": "Ubuntu",
          "Base_AMI_Name": "{{ .SourceAMIName }}",
          "Extra": "{{ .SourceAMITags.TagName }}",
          "Runs": "postgres, magic"
        }
      }
    ]
}
